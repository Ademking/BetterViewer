{
    "name": "BetterViewer",
    "version": "1.0.5",
    "manifest_version": 2,
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": true
    },
    "browser_action": {
        "default_title": "BetterViewer"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "ademking@betterviewer",
            "strict_min_version": "42.0"
        }
    },
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "activeTab",
        "storage",
        "*://*/*"
    ],
    "web_accessible_resources": [
        "pages/*"
    ],
    "icons": {
        "16": "icons/16.png",
        "48": "icons/48.png",
        "128": "icons/128.png"
    },
    "content_security_policy": "default-src 'self'; connect-src 'self' https://*/*"
}