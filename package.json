{
  "name": "betterviewer",
  "displayName": "BetterViewer",
  "version": "2.0.2",
  "description": "A browser extension for better image viewing experience",
  "author": "Adem Kouki <ademkingnew@gmail.com> (https://github.com/Ademking/BetterViewer)",
  "license": "MIT",
  "scripts": {
    "dev": "plasmo dev",
    "dev:verbose": "plasmo dev --verbose",
    "dev:firefox": "plasmo dev --target=firefox-mv3",
    "build": "plasmo build",
    "build:source": "plasmo build --source-maps",
    "build:chrome": "plasmo build --target=chrome-mv3 --zip",
    "build:firefox": "plasmo build --target=firefox-mv3 --zip --source-maps",
    "package": "plasmo package",
    "build:all": "pnpm run build:chrome && pnpm run build:firefox"
  },
  "keywords": [
    "betterviewer",
    "image",
    "viewer",
    "browser",
    "extension",
    "better"
  ],
  "dependencies": {
    "@mantine/core": "7.4.2",
    "@mantine/hooks": "7.4.2",
    "@nuintun/qrcode": "^4.1.14",
    "@plasmohq/messaging": "^0.7.1",
    "@plasmohq/storage": "^1.15.0",
    "@simonwep/pickr": "^1.9.1",
    "@tldraw/tldraw": "2.0.2",
    "@uidotdev/usehooks": "^2.4.1",
    "exif-js": "^2.3.0",
    "html2canvas": "^1.4.1",
    "lucide-react": "^0.482.0",
    "plasmo": "0.90.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-filerobot-image-editor": "^4.9.1",
    "react-hotkeys-hook": "^4.6.1",
    "react-json-view": "^1.21.3",
    "react-konva": "18",
    "react-mobile-cropper": "^0.8.0",
    "react-winbox": "^1.5.0",
    "sonner": "^2.0.1",
    "tippy.js": "^6.3.7",
    "use-eye-dropper": "^1.7.1",
    "viewerjs": "^1.11.7",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.5.3",
    "postcss-preset-mantine": "^1.17.0",
    "postcss-simple-vars": "^7.0.1",
    "prettier": "3.2.4",
    "tailwindcss": "3",
    "typescript": "5.3.3"
  },
  "manifest": {
    "permissions": [
      "storage",
      "contextMenus"
    ],
    "host_permissions": [
      "https://*/*",
      "http://*/*",
      "file:///*"
    ],
    "browser_specific_settings": {
      "gecko": {
        "id": "ademking@betterviewer"
      }
    }
  }
}
